{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": ["es6", "dom", "es2017"],
        "target": "es2015",
        "typeRoots": ["./src/types", "node_modules/@types", "./src/routes/types"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": true
    },
    "include": [
        "./src"
    ]
}